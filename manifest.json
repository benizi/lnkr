{
  "manifest_version": 2,
  "name": "LNKR - LiNK shorteneR",
  "background": {
    "scripts": ["lnkr.js"],
    "persistent": false
  },
  "version": "0.0.1",
  "permissions": [
    "activeTab",
    "tabs",
    "history"
  ],
  "browser_action": {
    "default_title": "Copy Short Link"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      }
    }
  }
}
